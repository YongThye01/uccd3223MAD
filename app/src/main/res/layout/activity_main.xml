<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/math"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCompareNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic 1- Compare Numbers" />

    <Button
        android:id="@+id/btnOrderNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic 2- Ordering of Numbers" />

    <Button
        android:id="@+id/btnComposeNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic 3- Composing Numbers" />

</LinearLayout>